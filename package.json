{
    "name": "tiuraniemi.io",
    "version": "0.0.1",
    "licence": "AGPL-3.0",
    "private": true,
    "scripts": {
        "asciidoc": "npm run asciidoc:json && npm run asciidoc:html && npm run asciidoc:gemini",
        "asciidoc:json": "asciidoctor --require asciidoctorjs-json-converter --backend json src/asciidoc/blog/*.adoc --destination-dir=.svelte-kit/blog/metadata",
        "asciidoc:html": "asciidoctor --backend html5 src/asciidoc/blog/*.adoc --embedded --destination-dir=.svelte-kit/blog/partials",
        "asciidoc:gemini": "asciidoctor --require asciidoctorjs-gemini-converter -a image-base-url=https://tiuraniemi.io -a author-prefix=by -a keywords-prefix=Under: -a links-heading=Links -a footnotes-heading=Notes --backend gemini src/asciidoc/blog/*.adoc --destination-dir=dist/gemini/blog",
        "generate-blog-sources": "node scripts/generateBlogSources.cjs",
        "dev": "svelte-kit dev",
        "build": "svelte-kit build",
        "package": "svelte-kit package",
        "preview": "svelte-kit preview",
        "prepare": "svelte-kit sync",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "devDependencies": {
        "@asciidoctor/core": "^2.2.6",
        "@sveltejs/adapter-static": "next",
        "@sveltejs/kit": "next",
        "@types/cookie": "^0.4.1",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "asciidoctor": "^2.2.6",
        "asciidoctorjs-gemini-converter": "git+https://github.com/ttiurani/asciidoctorjs-gemini-converter.git",
        "asciidoctorjs-json-converter": "git+https://github.com/ttiurani/asciidoctorjs-json-converter.git",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-svelte3": "^3.2.1",
        "node-gd": "^2.1.1",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.5.0",
        "sharp": "^0.30.4",
        "svelte": "^3.46.0",
        "svelte-check": "^2.2.6",
        "svelte-preprocess": "^4.10.1",
        "tslib": "^2.3.1",
        "typescript": "~4.6.2"
    },
    "type": "module"
}
